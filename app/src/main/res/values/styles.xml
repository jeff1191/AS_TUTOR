<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Widget.CalendarView.Custom" parent="">
        <item name="android:dayOfWeekTextAppearance">@color/textoNormal</item>
        <item name="android:selectedWeekBackgroundColor">@android:color/white</item>
        <item name="android:colorFocusedHighlight">@android:color/black</item>
        <item name="android:focusedMonthDateColor">@color/textoNormal</item>
        <item name="android:weekSeparatorLineColor">@color/colorPrimary</item>
        <item name="android:weekDayTextAppearance">@color/colorPrimary</item>
        <item name="android:dateTextAppearance">@style/pruebaEstilo</item>
    </style>

    <style name="pruebaEstilo" parent="TextAppearance.AppCompat.Medium">
        <item name="android:numbersBackgroundColor">@android:color/black</item>
    </style>


</resources>
