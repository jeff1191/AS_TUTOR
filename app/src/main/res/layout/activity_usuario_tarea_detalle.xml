<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentacion.UsuarioTareaDetalleActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- Titulo pantalla -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="TAREA"
        android:gravity="center" />

    <!-- Layout con el texto y la hora para alarmas y preguntas-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <!-- Alarma -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Alarma"
                    android:layout_weight="1"
                    android:gravity="center" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textoAlarma"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/horaAlarma"
                    android:gravity="center"
                    android:layout_weight="11"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="20dp" />

            </LinearLayout>

        <!-- Pregunta -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Pregunta"
                    android:layout_weight="1"
                    android:gravity="center" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textoPregunta"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/horaPregunta"
                    android:gravity="center"
                    android:layout_weight="11"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="20dp" />

            </LinearLayout>

    </LinearLayout>


    <!-- Seccion inferior con frecuencia y respuestas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Frecuencia -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Frecuencia"
                android:layout_weight="1"
                android:gravity="center|bottom" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/frecuencia"/>

        </LinearLayout>


        <!-- Mejora -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Mejora"
                android:layout_weight="1"
                android:gravity="center|bottom" />

            <EditText
                android:textAlignment="center"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:inputType="number"
                android:id="@+id/mejora"
                android:ems="10"
                android:layout_weight="1"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Respuestas -->
        <!-- Si -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Respuestas SI"
                android:layout_weight="1"
                android:gravity="center|bottom" />

            <EditText
                android:textAlignment="center"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:inputType="number"
                android:id="@+id/si"
                android:ems="10"
                android:layout_weight="1"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- No -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Respuestas NO"
                android:layout_weight="1"
                android:gravity="center|bottom" />

            <EditText
                android:textAlignment="center"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:inputType="number"
                android:id="@+id/no"
                android:ems="10"
                android:layout_weight="1"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Total -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Total respuestas"
                android:layout_weight="1"
                android:gravity="center|bottom" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/total"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Seccion botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <!-- Espacio izquierdo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>

        <!-- Boton cancelar-->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/botonCancelar"
            android:text="Cancelar"
            android:layout_marginRight="10dp" />

        <!-- Boton guardar-->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/botonAceptar"
            android:text="ACEPTAR"
            android:layout_marginLeft="10dp" />

        <!-- Espacio derecho -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>

        </LinearLayout>

</LinearLayout>