<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.FragmentDetalleAyuda"
    android:background="#ffffff">

    <!-- Titulo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30dp"
        android:text="Titulo pregunta"
        android:id="@+id/pregunta"
        android:gravity="center" />

    <!-- Explicacion y pantallazo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <!-- Respuesta a la pregunta -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Respuesta a la pregunta"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/repuesta" />

        <!-- Pantallazo descriptivo -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/pantallazo"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>