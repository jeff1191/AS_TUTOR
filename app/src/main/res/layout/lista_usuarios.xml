<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listaImagenAvatar"
            android:src="@drawable/avatar"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:clickable="true"
            android:layout_marginStart="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView android:id="@+id/listaUsuarioTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Texto "
            android:layout_above="@+id/ListaUsuarioDes"
            android:layout_alignStart="@+id/ListaUsuarioDes" />

        <TextView android:id="@+id/ListaUsuarioDes"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:textStyle="normal"
            android:textSize="12sp"
            android:text="Descripcion"
            android:layout_alignBottom="@+id/listaImagenAvatar"
            android:layout_toEndOf="@+id/listaImagenAvatar" />
</RelativeLayout>

